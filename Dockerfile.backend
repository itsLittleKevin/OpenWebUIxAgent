# =============================================================================
# ClusterX AI Backend
# Full production build with all dependencies
# =============================================================================
FROM python:3.11-slim AS builder

WORKDIR /app

# Install system dependencies for building
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    libpq-dev \
    libffi-dev \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for layer caching
COPY open-webui/backend/requirements.txt /app/requirements.txt

# Install Python dependencies
RUN pip install --no-cache-dir --user -r /app/requirements.txt

# Install additional custom dependencies not in upstream requirements
RUN pip install --no-cache-dir --user python-osc

# =============================================================================
# Production stage
# =============================================================================
FROM python:3.11-slim

WORKDIR /app

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    curl \
    ffmpeg \
    libpq5 \
    libffi8 \
    && rm -rf /var/lib/apt/lists/*

# Copy installed packages from builder
COPY --from=builder /root/.local /root/.local
ENV PATH=/root/.local/bin:$PATH

# Copy backend source
COPY open-webui/backend /app/backend

# Copy CHANGELOG.md into the open_webui package (code expects it there)
COPY open-webui/CHANGELOG.md /app/backend/open_webui/CHANGELOG.md

# Copy .env file for configuration
COPY open-webui/.env /app/backend/.env

# Copy built frontend to where Open WebUI expects it (/app/build)
COPY open-webui/build /app/build

WORKDIR /app/backend

# Create necessary directories
RUN mkdir -p data uploads vector_db cache logs

# Set environment variables
ENV DOCKER=true
ENV PORT=8080
ENV HOST=0.0.0.0

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

EXPOSE 8080

CMD ["python", "-m", "uvicorn", "open_webui.main:app", \
     "--host", "0.0.0.0", "--port", "8080", \
     "--forwarded-allow-ips", "*"]
